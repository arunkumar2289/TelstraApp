<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/alert_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_alert_height"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/alert_padding"
            android:text="@string/alert_no_network_title"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/alert_padding"
            android:text="@string/alert_no_network_text"
            android:textColor="@color/black"
            android:textSize="@dimen/alert_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />
    <Button
        android:id="@+id/alert_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_alert_height"
        android:background="@color/black"
        android:text="@string/alert_no_network_ok"
        android:textColor="@color/white" />
</LinearLayout>